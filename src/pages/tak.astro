---
import { Image } from "astro:assets";
import slojfe from "../assets/slojfestribe.png";
import Button from "../components/Button.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <section class="grid grid-cols-1 place-self-center mt-60 gap-9">
    <h1 class="place-self-center">Tak for dit køb og donation!</h1>
    <div class="">
      <p class="place-self-center">Joliment og Make A Wish værdsætter dit køb af sløjfe! Du har nu</p>
      <p class="place-self-center">været med til at hjælpe et barn i denne juletid!</p>
    </div>
    <div class="place-self-center">
      <a href="/tak"><Button variant="secondary">Tilbage til startside</Button></a>
    </div>
    <Image src={slojfe} alt="" class="w-full my-10" />
  </section>
</MainLayout>
