---
import { Image } from "astro:assets";
import "../styles/global.css";
import hero from "../assets/heroindex.svg";
import kategori1 from "../assets/kategori1.svg";
import kategori2 from "../assets/kategori2.svg";
import kategori3 from "../assets/kategori3.svg";
import kategori4 from "../assets/kategori4.svg";
import mobil from "../assets/Mobil-ikon.png";
import mail from "../assets/mail-ikon.png";
import facebook from "../assets/Faceikon.svg";
import instagram from "../assets/instaikon.svg";
import tiktok from "../assets/tiktokikon.svg";
import JolimentLayout from "../layouts/JolimentLayout.astro";
---

<JolimentLayout>
  <!--Joliment logo på landing page start -->
  <html class="bg-beige">
    <section class="">
      <div class="bg-transparent z-50 absolute">
        <h1 class="text-darkred m-5 lg:m-10 text-3xl lg:text-5xl">JOLIMENT</h1>
      </div>
      <Image src={hero} alt="" class="w-full" />
    </section>
    <!--Joliment logo på landing page start -->

    <!--Billede galleri start -->
    <section>
      <div class="my-20">
        <h2 class="text-darkred place-self-center text-3xl lg:text-5xl font-sans">KATEGORI</h2>
      </div>
      <div class="grid lg:grid-cols-2 grid-cols-1 gap-15 m-10 place-self-center justify-center">
        <div>
          <a href="/kampagneforside"><Image src={kategori1} alt="kampagne hjemmesiden" class="w-140" /></a>
        </div>
        <div>
          <Image src={kategori2} alt="menu" class="w-140" />
        </div>
        <div>
          <Image src={kategori3} alt="løbeklub" class="w-140" />
        </div>
        <div>
          <Image src={kategori4} alt="vintage" class="w-140" />
        </div>
      </div>
    </section>
    <!--Billede galleri start -->

    <!--Footer start -->
    <footer>
      <div class="grid grid-cols-1 lg:grid-cols-3 mt-10 p-10">
        <div class="place-self-center">
          <div>
            <h1 class="text-darkred mb-5">JOLIMENT</h1>
          </div>
          <p class="mb-3 text-darkred">Kontakt</p>
          <div class="flex items-center mb-3 gap-3">
            <Image src={mail} alt="mail ikon" class="" />
            <a class="text-darkred" href="">Info@joliment.dk</a>
          </div>
          <div class="flex items-center mb-3 gap-3">
            <Image src={mobil} alt="mobil ikon" class="" />
            <a class="text-darkred" href="">+45 40 22 19 23</a>
          </div>
          <p class="text-darkred">Mandag - Fredag kl. 9 - 17</p>
        </div>

        <div class="place-self-center lg:mt-13">
          <p class="text-darkred">Adresse</p>
          <p class="text-darkred">JOLIMENT</p>
          <p class="text-darkred">Gammel jernbanevej 4,</p>
          <p class="text-darkred">2500, Valby</p>
          <p class="text-darkred">Danmark</p>
        </div>

        <div class="flex flex-col items-center">
          <div class="grid grid-cols-3 sm:grid-cols-3 mt-10 lg:mt-18 gap-5">
            <a href="skriv facebook linke her"><Image src={facebook} alt="facebook ikon" class="w-8" /></a>
            <a href="skriv insta link her"><Image src={instagram} alt="instagram ikon" class="" /></a>
            <a href="kriv tiktok link her"><Image src={tiktok} alt="tiktok ikon" class="" /></a>
          </div>
        </div>
      </div>
    </footer>
    <!--Footer slut -->
  </html>
</JolimentLayout>
