---
const links = [
  { href: "/", label: "Hjem" },
  { href: "/samarbejde", label: "Samarbejde" },
];
---

<header>
  <nav class="nav">
    <a class="brand" href="/">Joliment</a>
    <input id="nav-toggle" class="nav-toggle" type="checkbox" aria-label="menu toggle" />
    <label for="nav-toggle" class="nav-toggle-label" aria-hidden="true">â˜°</label>
    <ul class="nav-list">
      {
        links.map((link) => (
          <li>
            <a href={link.href}>{link.label}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style>
  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 1rem;
    background: #ffffff;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }
  .brand {
    font-weight: 700;
    color: #111827;
    text-decoration: none;
    font-size: 1.1rem;
  }
  .nav-list {
    list-style: none;
    display: flex;
    gap: 1rem;
    margin: 0;
    padding: 0;
  }
  .nav-list a {
    text-decoration: none;
    color: #374151;
    padding: 0.35rem 0.5rem;
    border-radius: 6px;
  }
  .nav-list a:hover {
    background: rgba(15, 23, 42, 0.04);
  }
  .nav-toggle {
    display: none;
  }
  .nav-toggle-label {
    display: none;
    cursor: pointer;
    font-size: 1.4rem;
  }

  @media (max-width: 640px) {
    .nav-toggle-label {
      display: block;
    }
    .nav-list {
      display: none;
      flex-direction: column;
      width: 100%;
      margin-top: 0.5rem;
    }
    .nav-toggle:checked + .nav-toggle-label + .nav-list {
      display: flex;
    }
    .nav {
      flex-direction: column;
      align-items: stretch;
    }
    .brand {
      padding-top: 0.25rem;
    }
  }
</style>
